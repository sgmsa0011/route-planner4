#!/usr/bin/env bash
set -euo pipefail

echo "pre-push: lint -> test -> build"

if ! command -v npm >/dev/null 2>&1; then
  echo "[pre-push] npmが見つかりません。npmをインストールしてください。" >&2
  exit 1
fi

echo "[pre-push] Running: npm run lint"
npm run lint

echo "[pre-push] Running: npm test"
npm test

echo "[pre-push] Running: npm run build"
npm run build

echo "[pre-push] OK"

